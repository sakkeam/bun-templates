{
	"image": "mcr.microsoft.com/devcontainers/typescript-node:22",
	"forwardPorts": [5173, 8787],
	"features": {
		"ghcr.io/devcontainers-extra/features/bun:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/go:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome",
				"esbenp.prettier-vscode",
				"golang.Go",
				"GitHub.vscode-github-actions",
				"vitest.explorer"
			]
		}
	},
	"onCreateCommand": "curl -fsSL https://dl.dagger.io/dagger/install.sh | BIN_DIR=$HOME/.local/bin sh && curl -sfS https://dotenvx.sh | sudo sh",
	"postCreateCommand": "dagger develop && bun install",
	"postStartCommand": "bun run dev"
}
